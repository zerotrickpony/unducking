{
  "compilerOptions": {
    "outFile": "web/lib/all.js",
    "target": "es2021",
    "module": "amd",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
