{
  "compilerOptions": {
    "outDir": "out/tools",
    "target": "es2021",
    "module": "node16",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "tools/**/*.ts"
  ]
}
